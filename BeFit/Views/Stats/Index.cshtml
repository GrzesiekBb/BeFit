@model IEnumerable<BeFit.Models.ExerciseStatsViewModel>

@{
    ViewData["Title"] = "Statystyki ćwiczeń";
}

<h1>Statystyki ćwiczeń - ostatnie 4 tygodnie</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ćwiczenie</th>
            <th>Ile razy wykonane</th>
            <th>Łączna liczba powtórzeń</th>
            <th>Średnie obciążenie (kg)</th>
            <th>Maksymalne obciążenie (kg)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExerciseName</td>
                <td>@item.ExecutionCount</td>
                <td>@item.TotalReps</td>
                <td>@item.AverageLoad.ToString("0.0")</td>
                <td>@item.MaxLoad.ToString("0.0")</td>
            </tr>
        }
    </tbody>
</table>
